<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.yalantis.beamazingtoday.ui.widget.BatRecyclerView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/batRvSecondary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:divider_color="@color/secondaryLightColor"
        app:hint="Add Primary Keyword"
        app:list_background="@color/white_translucent"
        app:plus_color="@color/red" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:clickable="true"
        android:src="@drawable/ic_delete"
        android:visibility="invisible"
        app:rippleColor="@color/secondaryLightColor" />

</RelativeLayout>